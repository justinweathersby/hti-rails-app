%nav#mainNav.navbar.navbar-default.navbar-fixed-top.affix
  .container
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        Menu
        %i.fa.fa-bars
      %a.navbar-brand.page-scroll{href: root_path, style: "padding: 5px 0"}
        = image_tag("hti_logo.png", style: "max-height:100%; margin-left: 10px;")
      / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            %li.dropdown
              %a.dropdown-toggle{"data-delay" => "1000", "data-hover" => "dropdown", "data-toggle" => "dropdown", :href => "#"}
                Account
                %span.caret
              %ul.dropdown-menu.dropdown-menu-default{:role => "menu"}
                %li= link_to "Profile", edit_user_registration_path
                %li= link_to "Sign out", destroy_user_session_path, method: :delete
        - else
          %li
            = link_to 'Login', new_session_path(resource_name)
