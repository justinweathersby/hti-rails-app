.row{:style => "padding-top:40px"}
  .col-xs-12.col-md-8.col-lg-6.col-md-offset-2.col-lg-offset-3{:style => "padding-left:0; padding-right:0"}
    %div{:style => " width:100%;"}
      .row{:style => "margin-left:0; margin-right:0"}
        .col-sm-12.form-box
          = form_for(resource, as: resource_name,  url: registration_path(resource_name), :html => {:class => 'f1', :style => '', method: :put}) do |f|

            = devise_error_messages!

            .form-group.form-md-line-input.form-md-floating-label{:style => "padding-bottom: 0px; margin-bottom:0"}
              .input-group{:style => ""}
                = f.text_field :email, class: "form-control", style: "width:100%"
                %label{:for => "form_control_1", :style => "font-size:12px;"} Email
                %span.input-group-addon
                  %i.fa.fa-envelope-o

            .form-group.form-md-line-input.form-md-floating-label{:style => "padding-bottom: 0px; margin-bottom:0"}
              .input-group{:style => ""}
                = f.text_field :name, class: "form-control", style: "width:100%"
                %label{:for => "form_control_1", :style => "font-size:12px;"} Name
                %span.input-group-addon
                  %i.fa.fa-user

            .form-group.form-md-line-input.form-md-floating-label{:style => "padding-bottom: 5px;margin-bottom:0"}
              .input-group
                = f.password_field :password, autocomplete: "off", class: "form-control", style: "width:100%"
                %label{:for => "form_control_1", :style => "font-size:12px;"} Password
                %span.input-group-addon
                  %i.fa.fa-lock

            .form-group.form-md-line-input.form-md-floating-label{:style => "padding-bottom: 5px;margin-bottom:0"}
              .input-group
                = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", style: "width:100%"
                %label{:for => "form_control_1", :style => "font-size:12px;"} Password confirmation
                %span.input-group-addon
                  %i.fa.fa-lock


            .form-group.form-md-line-input.form-md-floating-label{:style => "padding-bottom: 5px;"}
              .input-group
                = f.password_field :current_password, autocomplete: "off", class: "form-control", style: "width:100%"
                %label{:for => "form_control_1", :style => "font-size:12px;"} Current password
                %span.input-group-addon
                  %i.fa.fa-lock

            .row{:style => "text-align:center"}
              = f.submit 'Update', :class => "btn btn-next", :style => "border-radius: 5px !important; margin-top:10px; background: #FF5252; font-family: 'Muli', 'Helvetica', 'Arial', 'sans-serif'; text-shadow:none; font-variant:none; width: 92%"
            -#.row{:style => "text-align:center"}
              = link_to 'Signup', new_user_registration_path, :class => "btn btn-default btn-sm", :style => "border-radius: 5px !important; margin-top:10px; font-family: 'Muli', 'Helvetica', 'Arial', 'sans-serif'; font-size: 10px; text-shadow:none; font-variant:none; text-decoration:none"
              = link_to 'Forgot your password?', new_password_path(resource_name), :class => "btn btn-default btn-sm", :style => "border-radius: 5px !important; margin-top:10px; font-family: 'Muli', 'Helvetica', 'Arial', 'sans-serif'; font-size: 10px; text-shadow:none; font-variant:none; text-decoration:none"